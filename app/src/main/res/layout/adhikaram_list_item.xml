<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/adhikaram_number_imageview"
        android:layout_width="@dimen/dp_66"
        android:layout_height="@dimen/dp_66"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/abc_ab_share_pack_mtrl_alpha" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:layout_toEndOf="@+id/adhikaram_number_imageview"
        android:layout_toRightOf="@+id/adhikaram_number_imageview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adhikaram_tamil_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_2"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/adhikaram_english_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_4"
            android:textSize="@dimen/sp_20" />

    </LinearLayout>

</RelativeLayout>
